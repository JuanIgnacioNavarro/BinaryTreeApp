<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BinaryTree.Views.CreateTreePage"
    BindingContext="{Binding Main, Source={StaticResource Locator}}"
    Title="Tree Creation">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="#000000"
            Padding="0,100,0,0"
            BindingContext="{Binding CreateTree}">

            <Frame
                CornerRadius="150" 
                HorizontalOptions="Center"
                WidthRequest="200"
                HeightRequest="200"
                IsClippedToBounds="True"
                Padding="0">

                <Frame.GestureRecognizers>

                    <TapGestureRecognizer

                        Command="{Binding VisualTreeCommand, Mode=TwoWay}">

                    </TapGestureRecognizer>

                </Frame.GestureRecognizers>

                <Image
                    Source="BinaryTree"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Aspect="AspectFill">
                </Image>

            </Frame>

            <StackLayout
                VerticalOptions="EndAndExpand"
                Padding="20">

                <Entry
                    Margin="80, 0"
                    WidthRequest="70"
                    HeightRequest="50"
                    Placeholder="Number"
                    BackgroundColor="#393748"
                    TextColor="#FFFFFF"
                    HorizontalTextAlignment="Center"
                    FontSize="Large"
                    Keyboard="Numeric"
                    Text="{Binding NumberText, Mode=TwoWay}">
                </Entry>
           
                <Button
                    CornerRadius="15"
                    HeightRequest="50"
                    Margin="50, 0"
                    BackgroundColor="#0F084D"
                    Text="Add"
                    TextColor="#FFFFFF"
                    FontSize="Large"
                    Command="{Binding AddNodeCommand, Mode=TwoWay}">
                </Button>

            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>
